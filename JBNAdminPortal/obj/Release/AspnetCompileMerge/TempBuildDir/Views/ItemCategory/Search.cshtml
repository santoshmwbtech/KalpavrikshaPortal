@model JBNClassLibrary.ItemCategory



<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Item Category</h4>

            @using (Ajax.BeginForm("SearchByItemName", "ItemCategory", null, new AjaxOptions
            {
                OnSuccess = "SearchSuccess",
                HttpMethod = "post",
                LoadingElementId = "progress",
                UpdateTargetId = "dvList"
            }, new { @class = "form-inline" }))
            {
                @Html.AntiForgeryToken()

                <label class="col-md-2">Search by Item</label>
                @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @class = "form-control col-md-3", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.SearchText, "", new { @class = "text-danger col-md-2" })

                <button type="submit" class="btn btn-success col-md-3">Search</button>
            }

        </div>
    </div>
</div>

<script>
    $.validator.unobtrusive.parse(document);
</script>



