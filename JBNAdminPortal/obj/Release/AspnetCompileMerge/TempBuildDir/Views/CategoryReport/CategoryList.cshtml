@model IEnumerable<JBNClassLibrary.AllCategories>

<div class="table-responsive pt-3">
    <table class="table table-bordered dataGrid">
        <thead>
            <tr>
                <th>
                    Main Category
                </th>
                <th>
                    Sub Category
                </th>
                <th>
                    Child Category
                </th>
                <th>
                    Item (Product) Category
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.MainCategoryName
                            </td>
                            <td>
                                @item.SubCategoryName
                            </td>
                            <td>
                                @item.ChildCategoryName
                            </td>
                            <td>
                                @item.ItemName
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>


