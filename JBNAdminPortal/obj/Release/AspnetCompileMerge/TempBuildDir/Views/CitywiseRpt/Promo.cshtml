@model JBNClassLibrary.DLPromo.Promotion

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.css" rel="stylesheet">

<h4 class="card-title">Promote</h4>
@using (Ajax.BeginForm("Promo", "CitywiseRpt", null, new AjaxOptions
{
    UpdateTargetId = "divList",
    OnSuccess = "onPromoSuccess_Ajax",
    HttpMethod = "post"
}, new { @class = "form-sample", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <p class="card-description">

    </p>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Message</label>
                @Html.TextAreaFor(model => model.Message, new { @class = "form-control input-lg textarea-editor", @required = "required" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-2">
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" id="IsEmail">
                        EMail
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" id="IsSMS">
                        SMS
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" id="IsWhatsApp">
                        WhatsApp
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>
    <div class="clearfix"></div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary" onclick="return onPromoteClick()">Promote</button>
    </div>
}



