@model IEnumerable<JBNClassLibrary.UserCreation>


<div class="table-responsive pt-3">
    <h2 class="card-title">All Users Details</h2>
    <table class="table table-bordered dataGrid">
        <thead>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Full Name
                </th>
                <th>
                    Mobile Number
                </th>
                <th>
                    Role Name
                </th>
                <th>Status</th>
                <th class="noExport"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.UserID)
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <label>Active</label>
                        }
                        else
                        {
                            <label>Inactive</label>
                        }
                    </td>
                    <td class="noExport">
                        @Ajax.ActionLink("Edit", "EditUser", "WebUsers", new { UserID = item.UserID }, new AjaxOptions { UpdateTargetId = "divCreate", HttpMethod = "get", OnComplete = "Ajax_OnComplete", OnFailure = "Ajax_Edit_Failure", OnSuccess = "onEditSuccess", LoadingElementId = "progress" }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>