@model IEnumerable<JBNClassLibrary.CategoryWiseRpt>

<div class="table-responsive pt-3">
    <table class="table table-bordered dataGrid">
        <thead>
            <tr>
                <th>
                    Firm Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(Model => item.CustId)
                                @Html.DisplayFor(modelItem => item.CustName)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.TypeofCategory)*@
                                <table class="table">
                                    @{
                                            string[] CString = item.TypeofCategory.Split('|');
                                            foreach (var itemCat in CString)
                                            {
                                            <tr class="d-inline-block">
                                                <td style="padding:0 3px 0 0;">
                                                    <label class="badge badge-primary">@itemCat</label>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </table>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                        </tr>
                    }
                }
            }

        </tbody>
    </table>
</div>


