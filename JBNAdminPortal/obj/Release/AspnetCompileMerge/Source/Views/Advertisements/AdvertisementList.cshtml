<div class="pt-3 table-responsive">
    <table class="table table-bordered dataGrid">
        <thead>
            <tr>
                <th>
                    Firm Name
                </th>
                <th>
                    Advertisement Name
                </th>
                <th>
                    Advertisement Type
                </th>
                <th>
                    From Date
                </th>
                <th>
                    To Date
                </th>
                <th>
                    Area of Ad
                </th>
                <th>
                    Approval Status
                </th>
                <th>
                    Payment Status
                </th>
                <th class="noExport">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(modelItem => item.AdvertisementMainID)
                                @item.customerInfo.FirmName
                            </td>
                            <td>
                                @item.AdvertisementName
                            </td>
                            <td>
                                @item.AdvertisementType
                            </td>
                            <td>
                                @item.FromDate.Value.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.ToDate.Value.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.AdvertisementArea
                            </td>
                            <td>
                                @item.ApprovalStatus
                            </td>
                            <td>
                                @item.PaymentStatus
                            </td>
                            <td class="noExport">
                                @*<button onclick="ShowPopup(@item.AdvertisementMainID);" data-toggle="modal" data-target="#myModal" class="btn btn-xs btn-primary">Approve / View</button>*@

                                @Html.ActionLink(linkText: "View Details", actionName: "Index", controllerName: "AdvertisementDetails", routeValues: new
                                    {
                                        Route = Helper.Encrypt(item.AdvertisementMainID.ToString(), "sblw-3hn8-sqoy19")
                                    },
                                    htmlAttributes: new { @class = "btn btn-info btn-xs" })
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
