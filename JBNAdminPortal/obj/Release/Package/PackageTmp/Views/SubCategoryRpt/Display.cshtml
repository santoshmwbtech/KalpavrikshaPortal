@model IEnumerable<JBNClassLibrary.SubCategoryWiseRpt>

<div class="table-responsive pt-3">
    <table class="table table-bordered dataGrid">
        <thead>
            <tr>
                <th width="20%">
                    Firm Name
                </th>
                <th width="70%">
                    SubCategory
                </th>
                <th width="10%">
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(Model => item.CustId)
                                @Html.DisplayFor(modelItem => item.CustName)
                            </td>
                            <td>
                                <table class="table table-sm" style="table-layout:fixed;">
                                    @{
                                        string[] CString = item.TypeofSubCategory.Split('|');

                                        <tr>
                                            <td style="padding:2px 3px 0 0;word-wrap: break-word; word-break: break-all;white-space: normal;">
                                                @foreach (var itemCat in CString)
                                                {
                                                    <span class="badge badge-primary" style="padding:3px 0 3px 0;">@itemCat</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                        </tr>
                    }
                }
            }

        </tbody>
    </table>
</div>


