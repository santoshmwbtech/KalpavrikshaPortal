@model IEnumerable<JBNClassLibrary.DLEnquiries.CustomerEnquiries>
@using JBNWebAPI.Logger


<div class="table-responsive pt-3">
    <table class="table table-bordered dataGrid">
        <thead>
            <tr>
                <th>
                    Sender Name
                </th>
                <th>
                    Enquiry Date
                </th>
                <th>
                    Enquiry City
                </th>
                <th>
                    Enquiry State
                </th>
                <th>
                    Replier Name
                </th>
                <th>
                    Sender City
                </th>
                <th>
                    Sender State
                </th>
                <th>
                    Business Demand
                </th>
                <th>
                    Purpose of Business
                </th>
                <th class="noExport">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(a => item.QueryID)
                                @Html.HiddenFor(a => item.CustID)
                                @Html.HiddenFor(a => item.SenderID)
                                @Html.HiddenFor(a => item.EnquiryType)
                                @item.CustomerName
                            </td>
                            <td>
                                @item.EnquiryDate
                            </td>
                            <td>
                                @item.EnquiryCityName
                            </td>
                            <td>
                                @item.EnquiryStateName
                            </td>
                            <td>
                                @item.SenderName
                                <i class="ti-bell mx-0"></i>
                                <span class="count">@item.ReplyCount</span>
                            </td>
                            <td>
                                @item.SenderCityName
                            </td>
                            <td>
                                @item.SenderStateName
                            </td>
                            <td>
                                @item.BusinessDemand
                            </td>
                            <td>
                                @item.PurposeBusiness
                            </td>

                            <td class="noExport">
                                @Html.ActionLink(linkText: "View", actionName: "Index", controllerName: "CustomerConversations", routeValues: new
                               {
                                   QueryID = Helper.Encrypt(item.QueryID.ToString(), "sblw-3hn8-sqoy19"),
                                   CustID = Helper.Encrypt(item.CustID.ToString(), "sblw-3hn8-sqoy19"),
                                   SenderID = Helper.Encrypt(item.SenderID.ToString(), "sblw-3hn8-sqoy19"),
                                   EnquiryType = Helper.Encrypt(item.EnquiryType.ToString(), "sblw-3hn8-sqoy19"),
                               },
                                htmlAttributes: new { @class = "btn btn-info btn-xs" })
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

