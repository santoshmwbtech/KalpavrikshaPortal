@model IEnumerable<JBNClassLibrary.EmailFooter>

<div class="table-responsive pt-3">
    <table class="table table-bordered dataGrid">
        <thead>
            <tr>
                <th>
                    Sl No
                </th>
                <th>
                    Email Footer
                </th>
                <th class="noExport">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(Model => item.ID)
                                @item.ID
                            </td>
                            <td>
                                @item.FooterBody
                            </td>
                            <td class="noExport">
                                @Ajax.ActionLink("Edit", "Edit", "EmailFooter", new { ID = item.ID }, new AjaxOptions { UpdateTargetId = "divCreate", HttpMethod = "get", OnSuccess = "onEditSuccess", LoadingElementId = "progress" }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
