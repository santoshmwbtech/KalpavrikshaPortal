@model  JBNClassLibrary.EmailFooter

<div class="col-12 grid-margin">
    <div class="card card-outline-primary">
        <div class="card-body">
            <h4 class="card-title">Create Email Footer</h4>
            @using (Ajax.BeginForm("Save", "EmailFooter", null, new AjaxOptions
            {
                UpdateTargetId = "divList",
                OnSuccess = "onCreateSuccess_Ajax",
                HttpMethod = "post",
                LoadingElementId = "progress"

            }, new { @class = "form-sample" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email Footer</label>
                            @Html.TextAreaFor(model => model.FooterBody, new { @class = "form-control input-lg textarea-editor", @required = "required" })
                            @Html.ValidationMessageFor(model => model.FooterBody, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary ">Submit</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    $.validator.unobtrusive.parse(document);
</script>
