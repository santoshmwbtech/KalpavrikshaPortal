@model IEnumerable<JBNClassLibrary.EmailFooter>

@{
    ViewBag.Title = "Email Footer";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row" id="divCreate">
            @Html.Action("Create")
        </div>
        <div class="row">
            <div class="col-12 grid-margin">
                <div class="card card-outline-success">
                    <div class="card-body">
                        <div id="divList">
                            @Html.Action("EmailFooterList")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="progress" class="modal">
    <div class="center" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; background-color: rgb(102, 102, 102); z-index: 30001; opacity: 0.8;">
        <p style="position: absolute; color: White; top: 50%; left: 45%;">
            <span>Loading, Please Wait...</span> <img src="~/images/loading.gif" height="100" width="100" />
        </p>
    </div>
</div>

<script>
    function onCreateSuccess_Ajax() {
        swal("Success", "Email Footer Saved Successfully", "success");
        $("#divCreate").load('@Url.Action("Create", "EmailFooter")');
        loadDataTableWithButtons();
    }
    function onEditSuccess_Ajax() {
        swal("Success", "Email Footer Updated Successfully", "success");
        $("#divCreate").load('@Url.Action("Create", "EmailFooter")');
        loadDataTableWithButtons();
    }
    function onBegin_Ajax(data) {
    }
    function onFailure_Ajax() {
        swal("Error", "Please try again later", "error");
    }
    function Ajax_Edit_Failure(xhr, statusDescription) {
        swal(xhr.statusDescription);
    }
    function onEditSuccess() {
        $("#ItemName").focus();
    }
    function Ajax_OnComplete() {

    }
    function SearchSuccess() {
        $('.dataGrid').dataTable({
            dom: 'Bfrtip',
            //buttons: [
            //    'csv', 'excel', 'pdf'
            //]
            buttons: [{
                extend: 'pdf',
                exportOptions: {
                    columns: "thead th:not(.noExport)"
                }
            }, {
                extend: 'excel',
                exportOptions: {
                    columns: "thead th:not(.noExport)"
                }
            }, {
                extend: 'csv',
                exportOptions: {
                    columns: "thead th:not(.noExport)"
                }
            }
            ]
        });
    }
</script>
