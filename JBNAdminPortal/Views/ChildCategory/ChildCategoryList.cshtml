@model IEnumerable<JBNClassLibrary.childcategory>

@if (ViewBag.MainCategories != null)
{
    <div class="col-12 grid-margin">
        <div class="panel panel-primary" style="border:1px solid #0094ff;border-radius:10px;">
            <div class="panel-body">
                <div class="row" style="margin:10px 0 10px 0;padding:10px;">
                    <div class="col-md-3">
                        Total Main Categories : <label class="badge badge-primary">@ViewBag.MainCategories </label>
                    </div>
                    <div class="col-md-3">
                        Total Sub Categories : <label class="badge badge-danger">@ViewBag.SubCategories</label>
                    </div>
                    <div class="col-md-3">
                        Total Child Categories : <label class="badge badge-success">@ViewBag.ChildCategories</label>
                    </div>
                    <div class="col-md-3">
                        Total Item Categories : <label class="badge badge-info">@ViewBag.ItemCategories</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="col-12 grid-margin">
    <div class="card card-outline-success">
        <div class="card-body">
            <div class="pt-3">
                <table class="table table-responsive table-bordered dataGrid">
                    <thead>
                        <tr>
                            <th>
                                Child Category Name
                            </th>
                            <th>
                                Sub Category Name
                            </th>
                            <th>
                                Main Category Name
                            </th>
                            <th>
                                Created Date
                            </th>
                            <th>
                                Reason / Reffered By
                            </th>
                            <th>
                                Approved By
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.HiddenFor(Model => item.ID)
                                            @item.ChildCategoryName
                                        </td>
                                        <td>
                                            @item.SubCategoryName
                                        </td>
                                        <td>
                                            @item.MainCategoryName
                                        </td>
                                        <td>
                                            @item.CreatedDate
                                        </td>
                                        <td>
                                            @item.RefferedByOrReason
                                        </td>
                                        <td>
                                            @item.ApprovedBy
                                        </td>
                                        <td>
                                            @Ajax.ActionLink("Edit", "Edit", "ChildCategory", new { ChildCategoryId = item.ID }, new AjaxOptions { UpdateTargetId = "divCreate", HttpMethod = "get", OnComplete = "Ajax_OnComplete", OnFailure = "Ajax_Edit_Failure", OnSuccess = "onEditSuccess", LoadingElementId = "progress" }, new { @class = "btn btn-danger btn-xs" })
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




